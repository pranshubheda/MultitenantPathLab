
<%= form_for :tenant, url: tenants_path do |f| %>
<div class="modal fade" id="myModal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h3 class="modal-title">Welcome to Multi tenant Pathology  </h3>
          <h4>Sign up Tenant</h4>
        </div>
        <div class="modal-body">
      <div class="form-inputs">
      <center>
                        <h5 style="margin-right:50px;"><%= f.label :name %> : &nbsp;&nbsp;&nbsp;&nbsp; <%= f.text_field :name%> <br><br> </h5>
                        
                        <h5 style="margin-right:90px;"> <%= f.label :subdomain %> : &nbsp;&nbsp;&nbsp;&nbsp; <%= f.text_field :subdomain %><br>
                        <br></h5>
                       
                        <h5 style="margin-right:80px;"> <%= f.label :image_url %> : &nbsp;&nbsp;&nbsp;&nbsp; <%= f.text_field :image_url %><br>
                        <br></h5>
      </center>
      </div>

            </div>

       <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                     
                  <%= f.submit %>             
        </div>
      </div>
    </div>
  </div>
<% end %>
<script type="text/javascript">
    $(window).load(function(){
        $('#myModal').modal('show');
    });
</script>


